
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0002-init-order-db" author="APanosyan">
        <createTable tableName="orders">
            <column name="order_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_user"
                             references="user(id)"/>
            </column>
            <column name="status" type="VARCHAR(255)"/>
            <column name="appointment_date" type="DATE"/>
            <column name="order_total" type="DECIMAL(10,2)"/>
            <column name="payment" type="VARCHAR(250)"/>
            <column name="order_notes" type="VARCHAR(255)"/>

        </createTable>
    </changeSet>

</databaseChangeLog>